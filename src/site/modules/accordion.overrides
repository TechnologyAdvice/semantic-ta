/*******************************
        User Overrides
*******************************/
.ui.accordion {
  .title {
    border-bottom: 1px solid @accordionGrey;
    i {
      float: right;
      color: @accordionGrey;
      margin-top: 0.5em;
    }
    &:hover i {
      color: darken(@accordionGrey, 10%);
    }
  }
}
.ui.styled.accordion .accordion,
.ui.styled.accordion {
  .title {
    border-bottom: none;
  }
}
